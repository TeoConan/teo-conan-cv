include ../../mixins/_global-mixins.pug

.vlt-section__vertical-align

	.vlt-section__content

		//Particles
		.vlt-section__particles

			.vlt-particle.vlt-custom--1259.vlt-fade-in-right(style='background-image: url(assets/img/root/plus-light-pattern.png); animation-delay: 750ms;')
			.vlt-particle.vlt-custom--2355.vlt-fade-in-left(style='background-image: url(assets/img/root/elipse-light.png); animation-delay: 500ms;')


		.container

			.row.align-items-center

				.col-lg-4.offset-lg-1

					.vlt-slide-photo

						.vlt-slide-photo__inside
							img(src='assets/img/attachment-07.jpg', alt='')

						.vlt-slide-photo__particle.vlt-fade-in-bottom--small.has-border-radius.has-box-shadow(style='top: -50px; right: -40px; width: 100px; transition-delay: 300ms;')
							img(src='assets/img/root/parallax-particle-01.png', alt='')

						.vlt-slide-photo__particle.vlt-fade-in-bottom--small.has-border-radius.has-box-shadow(style='top: 40px; left: -30px; width: 80px; transition-delay: 600ms;')
							img(src='assets/img/root/parallax-particle-02.png', alt='')

						.vlt-slide-photo__particle.vlt-fade-in-left--small.has-border-radius.has-box-shadow(style='left: 30px; bottom: -50px; width: 100px; transition-delay: 900ms;')
							img(src='assets/img/root/parallax-particle-03.png', alt='')

						.vlt-slide-photo__particle.vlt-fade-in-left--small.negative-z-index(style='right: -40px; bottom: -30px; width: 290px; transition-delay: 1.2s;')
							img(src='assets/img/root/plus-light-pattern.png', alt='')

					.vlt-gap-90

					+vlt_animation_block({
						delay: '200ms'
					})

						+vlt_button({
							title: 'See source code on Arkage Gitlab server',
							icon: '<svg style="width:24px;height:24px" viewBox="0 0 24 24"><path fill="currentColor" d="M21.94 13.11L20.89 9.89C20.89 9.86 20.88 9.83 20.87 9.8L18.76 3.32C18.65 3 18.33 2.75 17.96 2.75C17.6 2.75 17.28 3 17.17 3.33L15.17 9.5H8.84L6.83 3.33C6.72 3 6.4 2.75 6.04 2.75H6.04C5.67 2.75 5.35 3 5.24 3.33L3.13 9.82C3.13 9.82 3.13 9.83 3.13 9.83L2.06 13.11C1.9 13.61 2.07 14.15 2.5 14.45L11.72 21.16C11.89 21.28 12.11 21.28 12.28 21.15L21.5 14.45C21.93 14.15 22.1 13.61 21.94 13.11M8.15 10.45L10.72 18.36L4.55 10.45M13.28 18.37L15.75 10.78L15.85 10.45H19.46L13.87 17.61M17.97 3.94L19.78 9.5H16.16M14.86 10.45L13.07 15.96L12 19.24L9.14 10.45M6.03 3.94L7.84 9.5H4.23M3.05 13.69C2.96 13.62 2.92 13.5 2.96 13.4L3.75 10.97L9.57 18.42M20.95 13.69L14.44 18.42L14.46 18.39L20.25 10.97L21.04 13.4C21.08 13.5 21.04 13.62 20.95 13.69" /></svg>',
							link: 'https://git.arkage.app/root/teo-conan-cv-2021'
						})

					.vlt-gap-100--md

				.col-lg-5.offset-lg-1

					+vlt_animation_block({
						delay: '100ms'
					})

						h4 My main #[span.has-first-color passion] ? Create usefull things.

					.vlt-gap-50

					+vlt_animation_block({
						delay: '0ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/webapp.png',
							title: 'Web applications',
							text: 'Ecommerce, web tools, landing pages, etc...'
						})

						.vlt-gap-30

						+vlt_award_item({
							image: 'assets/img/skills/backend.png',
							title: 'Back-End development',
							text: 'ABP, C#, NodeJS, PHP, SQL...'
						})

						.vlt-gap-30

						+vlt_award_item({
							image: 'assets/img/skills/frontend.png',
							title: 'Front-End development',
							text: 'Angular, VueJS, SCSS, Javascript...'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '50ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/linux.png',
							title: 'Linux GNU & Server',
							text: 'Use Linux GNU for dev, servers management'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '100ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/gitlab.png',
							title: 'GitLab',
							text: 'Create and manage a GitLab project, use issues & branches system, etc...'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '150ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/docker.png',
							title: 'Docker',
							text: 'Build Docker project, write step-by-step documentation'
						})

					.vlt-gap-30


					+vlt_animation_block({
						delay: '200ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/android.png',
							title: 'Android',
							text: 'Beautiful & User-friendly app for all Android users'
						})