					.vlt-gap-100--md

				.col-lg-5.offset-lg-1

					+vlt_animation_block({
						delay: '100ms'
					})

						h4 My main #[span.has-first-color passion] ? Create usefull things.

					.vlt-gap-50

					+vlt_animation_block({
						delay: '0ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/webapp.png',
							title: 'Web applications',
							text: 'Ecommerce, web tools, landing pages, etc...'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '50ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/linux.png',
							title: 'Linux GNU & Server',
							text: 'Use Linux GNU for dev, servers management'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '100ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/gitlab.png',
							title: 'Git flow',
							text: 'Create and manage a Git project, use workflow, issues & branches system, etc...'
						})

					.vlt-gap-30

					+vlt_animation_block({
						delay: '150ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/docker.png',
							title: 'Docker',
							text: 'Build Docker project, write step-by-step documentation'
						})

					.vlt-gap-30


					+vlt_animation_block({
						delay: '200ms'
					})

						+vlt_award_item({
							image: 'assets/img/skills/android.png',
							title: 'Android',
							text: 'Beautiful & User-friendly app for all Android users'
						})